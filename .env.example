# Firebase Configuration
# Get these values from Firebase Console → Project Settings → Your apps
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_VAPID_KEY=your_web_push_vapid_key_here

# Optional: Firebase Emulator (for local development)
VITE_USE_FIREBASE_EMULATOR=false

# SolanaTracker API Configuration (for search, PnL, price)
# Get your API key from https://solanatracker.io/
VITE_SOLANATRACKER_API_KEY=your_solanatracker_api_key_here

# SolanaTracker RPC API Key (separate from API key - for RPC calls only)
# Get your RPC API key from https://solanatracker.io/ (API Keys section)
# Format: https://rpc-mainnet.solanatracker.io/?api_key={your_rpc_api_key}
VITE_SOLANATRACKER_RPC_API_KEY=your_solanatracker_rpc_api_key_here

# Birdeye API Configuration (for token transactions - used by scanner)
# Get your API key from https://birdeye.so/
VITE_BIRDEYE_API_KEY=your_birdeye_api_key_here

# Helius API Configuration
# Get your API key from https://www.helius.dev/
VITE_HELIUS_API_KEY=your_helius_api_key_here

# Webhook Configuration (for Vercel serverless functions)
# These are server-side only - don't use VITE_ prefix
HELIUS_API_KEY=your_helius_api_key_here
HELIUS_WEBHOOK_ID=  # Set after first webhook creation
WEBHOOK_URL=https://your-domain.vercel.app/api/webhook/transaction
WEBHOOK_SYNC_SECRET=your_random_secret_here
HELIUS_WEBHOOK_SECRET=your_random_secret_here  # Optional

# Firebase Admin SDK (for serverless functions)
# Copy the entire JSON from Firebase Console → Project Settings → Service Accounts
FIREBASE_SERVICE_ACCOUNT={"project_id":"...","client_email":"...","private_key":"..."}

# Encryption Secret
# IMPORTANT: Change this to a strong random secret in production!
# This is used to encrypt wallet credentials before storing in Firebase
# Generate a secure random string (e.g., using: openssl rand -base64 32)
VITE_ENCRYPTION_SECRET=your-strong-random-secret-here-change-in-production

# Server-side Encryption Secret (for serverless functions)
# Should match VITE_ENCRYPTION_SECRET value (without VITE_ prefix for server-side)
ENCRYPTION_SECRET=your-strong-random-secret-here-change-in-production
